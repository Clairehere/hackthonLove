<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PlaneteActivity">

    <!--Page centre -->
    <android.support.constraint.ConstraintLayout
        android:id="@+id/container_center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toTopOf="@+id/text_mheigh"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_locone4"
        app:srcCompat="@android:color/darker_gray" />

    <ImageButton
        android:id="@+id/img_locone1"
        android:layout_width="29dp"
        android:layout_height="40dp"
        android:layout_marginLeft="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:background="@android:color/transparent"
        android:scaleType="fitXY"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/location_icon_png_14" />

    <ImageButton
        android:id="@+id/img_locone2"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="44dp"
        android:layout_marginRight="44dp"
        android:layout_marginTop="28dp"
        android:background="@android:color/transparent"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/location_icon_png_14" />

    <ImageButton
        android:id="@+id/img_locone3"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="92dp"
        android:layout_marginStart="92dp"
        android:layout_marginTop="220dp"
        android:background="@android:color/transparent"
        android:scaleType="fitXY"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_locone1"
        app:srcCompat="@drawable/location_icon_png_14" />

    <ImageButton
        android:id="@+id/img_locone4"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="152dp"
        android:layout_marginRight="152dp"
        android:layout_marginTop="108dp"
        android:background="@android:color/transparent"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toStartOf="@+id/img_locone2"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/location_icon_png_14" />

    <ImageButton
        android:id="@+id/img_locone5"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="68dp"
        android:layout_marginStart="68dp"
        android:layout_marginTop="208dp"
        android:background="@android:color/transparent"
        android:scaleType="fitXY"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_locone3"
        app:srcCompat="@drawable/location_icon_png_14" />

        <ImageView
            android:id="@+id/iv_background_profil"
            android:layout_width="253dp"
            android:layout_height="288dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:srcCompat="@android:color/holo_blue_light" />

        <TextView
            android:id="@+id/txt_mname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="80dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="80dp"
            android:layout_marginTop="8dp"
            android:text="Name"
            app:layout_constraintEnd_toStartOf="@+id/txt_mgenre"
            app:layout_constraintStart_toStartOf="@+id/iv_background_profil"
            app:layout_constraintTop_toBottomOf="@+id/img_meeting" />

        <TextView
            android:id="@+id/txt_mgenre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="64dp"
            android:layout_marginRight="64dp"
            android:layout_marginTop="8dp"
            android:text="Genre"
            app:layout_constraintEnd_toEndOf="@+id/iv_background_profil"
            app:layout_constraintTop_toBottomOf="@+id/img_meeting" />

        <TextView
            android:id="@+id/text_mheigh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80dp"
            android:layout_marginStart="80dp"
            android:layout_marginTop="8dp"
            android:text="Height"
            app:layout_constraintStart_toStartOf="@+id/iv_background_profil"
            app:layout_constraintTop_toBottomOf="@+id/txt_mname" />

        <TextView
            android:id="@+id/tv_poid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="8dp"
            android:text="Weight"
            app:layout_constraintStart_toEndOf="@+id/text_mheigh"
            app:layout_constraintTop_toBottomOf="@+id/txt_mname" />

        <TextView
            android:id="@+id/txt_mhair"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="8dp"
            android:text="Hair"
            app:layout_constraintStart_toStartOf="@+id/iv_background_profil"
            app:layout_constraintTop_toBottomOf="@+id/text_mheigh" />

        <TextView
            android:id="@+id/txt_mskin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="Skin"
            app:layout_constraintStart_toEndOf="@+id/txt_mhair"
            app:layout_constraintTop_toBottomOf="@+id/text_mheigh" />

        <TextView
            android:id="@+id/txt_mspecies"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="8dp"
            android:text="Species"
            app:layout_constraintStart_toStartOf="@+id/iv_background_profil"
            app:layout_constraintTop_toBottomOf="@+id/txt_mhair" />

        <TextView
            android:id="@+id/txt_mmass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="12dp"
            android:text="Mass"
            app:layout_constraintStart_toStartOf="@+id/iv_background_profil"
            app:layout_constraintTop_toBottomOf="@+id/txt_mspecies" />

        <TextView
            android:id="@+id/txt_meyes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="Eyes"
            app:layout_constraintStart_toEndOf="@+id/txt_mskin"
            app:layout_constraintTop_toBottomOf="@+id/text_mheigh" />

        <ImageView
            android:id="@+id/img_meeting"
            android:layout_width="71dp"
            android:layout_height="66dp"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="@+id/iv_background_profil"
            app:layout_constraintHorizontal_bias="0.542"
            app:layout_constraintStart_toStartOf="@+id/iv_background_profil"
            app:layout_constraintTop_toTopOf="@+id/iv_background_profil"
            app:srcCompat="@mipmap/ic_launcher" />

        <Button
            android:id="@+id/button_like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:text="J'aime"
            app:layout_constraintBottom_toBottomOf="@+id/iv_background_profil"
            app:layout_constraintStart_toStartOf="@+id/iv_background_profil" />

        <Button
            android:id="@+id/button_not_like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:text="Je n'aime pas"
            app:layout_constraintBottom_toBottomOf="@+id/iv_background_profil"
            app:layout_constraintEnd_toEndOf="@+id/iv_background_profil" />

        <ImageView
            android:id="@+id/iv_gif"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/iv_background"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/iv_background"
            app:srcCompat="@android:color/transparent" />

    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout

        android:id="@+id/conteneur_bottom"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:baselineAligned="false"
        android:orientation="horizontal">
        <!-- -->

        <ImageView
            android:id="@+id/iv_table"
            android:layout_width="409dp"
            android:layout_height="266dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/fonderanplanete" />

        <TextView
            android:id="@+id/tv_listlike"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="16dp"
            android:text="Vos coups de coeur"
            android:textColor="@android:color/holo_orange_light"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/iv_table"
            app:layout_constraintTop_toTopOf="@+id/iv_table" />

        <ListView
            android:id="@+id/lv_like_planete"
            android:layout_width="158dp"
            android:layout_height="208dp"
            app:layout_constraintEnd_toEndOf="@+id/iv_table"
            app:layout_constraintTop_toBottomOf="@+id/tv_listlike"></ListView>
    </android.support.constraint.ConstraintLayout>

</android.support.v4.widget.DrawerLayout>